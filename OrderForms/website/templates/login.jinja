{% extends "base.jinja"%}

{% block body %}
<link rel="stylesheet" href="../static/styles/login.css" />


<div class="container" id="loginContainer">
    <div class="login-form">
        <form method="post">
            
            <!-- Card title -->
            <h2 class="text-center">Portal</h2>

            <!-- Email -->
            <div class="mb-3">
                <input id="email" name="email" class="form-control" placeholder="Email" value="{{ email or '' }}" required />
            </div>

            <!-- Password -->
            <div class="mb-3">
                <input id="password" name="password" class="form-control" type="password" placeholder="Password" required />
            </div>

            <!-- Submit button -->
            <div class="text-center">
                <input class="btn btn-outline-primary mb-3" type="submit" value="Sign In" />
            </div>

            <!-- Forgot password -->
            <!-- <div class="clearfix mb-3">
                <a href="#">Forgot Password?</a>
            </div> -->

            <!-- Create Account -->
            <div class="login-links text-center">
                <p class="mb-0">Don't have an account?</p>
                <a class="text-primary" href="/create-account">Create Account</a>
            </div>
        </form>

    </div>
</div>

{% endblock %}